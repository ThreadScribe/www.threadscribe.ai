---
import SiteLayout from "../layouts/BaseLayout.astro";

const title = "Thank you for installing ThreadScribe.ai";
---

<script>
  setTimeout(function () {
    window.location.href = "https://app.threadscribe.ai/";
  }, 3000);
</script>

<SiteLayout title={title} description={title}>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-12 text-center">
        <h2>Thank You for Signing Up!</h2>
        <p class="lead">You're being redirected to the app installation page...</p>
        <p class="lead">
          If you are not redirected, please <a href="https://app.threadscribe.ai/">click here.</a>
        </p>
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
    </div>
  </div>
</SiteLayout>
