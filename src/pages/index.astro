---
import { config } from "../config";

import CTAButtons from "../components/CTAButtons.astro";
import SiteLayout from "../layouts/BaseLayout.astro";

import SearchExample from "../images/threadscribe_search_example.png";
import SummaryExample from "../images/threadscribe_summary_example.png";

import Confluence from "../logos/confluence.svg";
import Freshdesk from "../logos/freshdesk.svg";
import GoogleDrive from "../logos/googledrive.svg";
import NotionLogo from "../logos/notion.svg";
import SlackLogo from "../logos/slack.svg";

const title = "Boost productivity and customer satisfaction with ThreadScribe.ai";
const description =
  "Transform Slack into a powerful, searchable knowledge base, utilizing advanced AI to break down information silos and streamline support operations.";
const image = "/threadscribe_homepage.png";
---

<SiteLayout title={title} description={description} image={image}>
  <!-- hero unit -->
  <section class="ts-hero my-5">
    <div class="container">
      <div class="d-flex justify-content-center text-center">
        <div class="col-12">
          <h1>
            Boost <span class="glow">productivity</span> and <span class="glow"
              >customer satisfaction</span
            >
          </h1>
          <!-- <h1>
            The Ultimate<br />
            <span class="glow">AI Chat Companion</span><br />
            for CX teams
          </h1> -->
          <!-- <h1>
            The Ultimate Chat Companion for <span class="glow"
              >Enhancing Agent Productivity</span
            >
          </h1> -->
          <!-- <h2>
            Transform fragmented information into a seamlessly structured, searchable knowledge
            base.
          </h2> -->
          <h2>
            ThreadScribe transforms your Slack workspace into a searchable knowledge base, using AI
            to break down information silos and streamline support operations.
          </h2>
          <CTAButtons />
        </div>
      </div>
    </div>
  </section>

  <!-- video -->
  <section class="container my-2">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8">
        <div class="ratio ratio-16x9">
          <iframe
            src="https://www.youtube.com/embed/5SW5wozdY2s?si=fHNHHJfr-vSO2txt"
            title="ThreadScribe.ai Promo"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </section>

  <section class="py-5">
    <div class="container text-center">
      <div class="row pb-5">
        <div class="col">
          <div class="eyebrow">why threadscribe</div>
          <h2>Streamline operations and delight customers</h2>
        </div>
      </div>

      <div class="row pb-5 row-cols-2 row-cols-lg-4">
        <div class="col">
          <div class="icon-wrapper">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="100%"
              height="100%"
              fill="currentColor"
              class="bi bi-lightning-charge-fill"
              viewBox="0 0 16 16"
            >
              <path
                d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09z"
              ></path>
            </svg>
          </div>
          <h4 class="pt-3 pb-4">Fast</h4>
          <p class="fs-5">
            Automatically processes conversations in real-time, ensuring instant insights and
            actions.
          </p>
        </div>
        <div class="col">
          <div class="icon-wrapper">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="100%"
              height="100%"
              fill="currentColor"
              class="bi bi-shield-lock-fill"
              viewBox="0 0 16 16"
            >
              <path
                fill-rule="evenodd"
                d="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.8 11.8 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7 7 0 0 0 1.048-.625 11.8 11.8 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.54 1.54 0 0 0-1.044-1.263 63 63 0 0 0-2.887-.87C9.843.266 8.69 0 8 0m0 5a1.5 1.5 0 0 1 .5 2.915l.385 1.99a.5.5 0 0 1-.491.595h-.788a.5.5 0 0 1-.49-.595l.384-1.99A1.5 1.5 0 0 1 8 5"
              ></path>
            </svg>
          </div>
          <h4 class="pt-3 pb-4">Secure</h4>
          <p class="fs-5">
            Safeguards your data with top-tier encryption, blending seamlessly into your existing
            workflows.
          </p>
        </div>
        <div class="col">
          <div class="icon-wrapper">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="100%"
              height="100%"
              fill="currentColor"
              class="bi bi-plug-fill"
              viewBox="0 0 16 16"
            >
              <path
                d="M6 0a.5.5 0 0 1 .5.5V3h3V.5a.5.5 0 0 1 1 0V3h1a.5.5 0 0 1 .5.5v3A3.5 3.5 0 0 1 8.5 10c-.002.434-.01.845-.04 1.22-.041.514-.126 1.003-.317 1.424a2.08 2.08 0 0 1-.97 1.028C6.725 13.9 6.169 14 5.5 14c-.998 0-1.61.33-1.974.718A1.92 1.92 0 0 0 3 16H2c0-.616.232-1.367.797-1.968C3.374 13.42 4.261 13 5.5 13c.581 0 .962-.088 1.218-.219.241-.123.4-.3.514-.55.121-.266.193-.621.23-1.09.027-.34.035-.718.037-1.141A3.5 3.5 0 0 1 4 6.5v-3a.5.5 0 0 1 .5-.5h1V.5A.5.5 0 0 1 6 0"
              ></path>
            </svg>
          </div>
          <h4 class="pt-3 pb-4">Seamless</h4>
          <p class="fs-5">
            Smoothly integrates with Slack for an effortless transition to structured knowledge.
          </p>
        </div>
        <div class="col">
          <div class="icon-wrapper">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="100%"
              height="100%"
              fill="currentColor"
              class="bi bi-search"
              viewBox="0 0 16 16"
            >
              <path
                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"
              ></path>
            </svg>
          </div>
          <h4 class="pt-3 pb-4">Powerful</h4>
          <p class="fs-5">
            Transform the maze of Slack channels into a navigable treasure trove of knowledge.
          </p>
        </div>
      </div>

      <div class="row py-5 icon-list text-center">
        <div class="col-12 pb-5">
          <h2>Source information from your existing tech stack directly into Slack</h2>
        </div>
        <div class="col">
          <img src={SlackLogo.src} />
        </div>
        <div class="col">
          <img src={NotionLogo.src} />
        </div>
        <div class="col">
          <img src={GoogleDrive.src} />
        </div>
        <div class="col">
          <img src={Confluence.src} />
        </div>
        <div class="col">
          <img src={Freshdesk.src} />
        </div>
      </div>
    </div>

    <div class="row mb-5 py-5 justify-content-center">
      <div class="col-2 text-center">
        <h3 class="fw-light">Schedule a Demo</h3>
        <div class="d-grid gap-2">
          <a class="btn btn-primary btn-lg" href={config.threadScribe.appHome}>
            <i class="bi bi-clock"></i> Find a Time
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- benefits carousel -->
  <section class="ts-benefits dark-blue">
    <div class="container">
      <div class="row justify-content-center">
        <!-- <h2 class="text-center">Why do I need ThreadScribe?</h2> -->
        <div class="col-12 col-md-10">
          <div id="threadScribeBenefits" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <div class="blockquote">
                  <h3>
                    2x the Revenue: Customer-first B2C businesses see nearly double the revenue
                    growth of noncustomer-first businesses.
                  </h3>
                  <h4>
                    &mdash;Forrester<br />
                    <em>
                      <a
                        class="text-white"
                        href="https://www.forrester.com/report/the-state-of-customer-obsession-2022/RES178015"
                        >The State of Customer Obsession
                      </a>
                    </em>
                  </h4>
                </div>
              </div>
              <div class="carousel-item">
                <div class="blockquote">
                  <h3>
                    75% more buying potential: 3 in 4 consumers will spend more with businesses that
                    provide a good CX.
                  </h3>
                  <h4>
                    &mdash;Zendesk<br />
                    <em>
                      <a class="text-white" href="https://cxtrends.zendesk.com/">CX Trends 2024</a>
                    </em>
                  </h4>
                </div>
              </div>
              <div class="carousel-item">
                <div class="blockquote">
                  <h3>80% of organizations expect to compete based on CX.</h3>
                  <h4>
                    &mdash;Gartner<br />
                    <em>
                      <a
                        class="text-white"
                        href="https://www.gartner.com/en/doc/3874972-realizing-the-benefits-of-superior-customer-experience-a-gartner-trend-insight-report"
                      >
                        Realizing the Benefits of Superior Customer Experience
                      </a>
                    </em>
                  </h4>
                </div>
              </div>
              <div class="carousel-item">
                <div class="blockquote">
                  <h3>
                    Just a 5% improvement in customer retention could increase profitability by 25%.
                  </h3>
                  <h4>
                    &mdash;Forrester<br />
                    <em>
                      <a
                        class="text-white"
                        href="https://www.forrester.com/blogs/customer-led-growth-is-getting-more-attention-among-b2b-firms-should-you-care/"
                        >Customer-Led Growth Is Getting More Attention Among B2B Firms</a
                      >
                    </em>
                  </h4>
                </div>
              </div>
            </div>
            <button
              class="carousel-control-prev"
              type="button"
              data-bs-target="#threadScribeBenefits"
              data-bs-slide="prev"
            >
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button
              class="carousel-control-next"
              type="button"
              data-bs-target="#threadScribeBenefits"
              data-bs-slide="next"
            >
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-5 mb-5 container">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-12 col-lg-6">
          <div class="eyebrow">instant thread summarization</div>
          <h3 class="text-primary">
            Boost Your Agents' Productivity with Seamless Slack Solutions
          </h3>
          <p class="py-3 fs-5">
            Intelligently summarize your conversations and make them serchable right from Slack.
          </p>

          <!-- <button class="btn btn-primary btn-lg">Get Started</button> -->
        </div>
        <div class="col-12 col-lg-6">
          <img
            src={SummaryExample.src}
            class="img-fluid rounded shadow-lg"
            alt="Instantly summarize your lengthly slack threads with ThreadScribe.ai"
            width="100%"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="container py-5">
    <div class="">
      <div class="row flex-md-row-reverse align-items-center">
        <div class="col-12 col-lg-6">
          <div class="eyebrow">Clarity at Your Fingertips</div>
          <h3 class="text-primary">Find What Matters, Instantly</h3>
          <p class="py-3 fs-5">
            ThreadScribe.ai simplifies your workflow, quickly surfacing key insights so you can
            resolve issues faster. Less clutter, more clarity — empower your team to provide
            standout service effortlessly.
          </p>

          <!-- <button class="btn btn-primary btn-lg">Get Started</button> -->
        </div>
        <div class="col-12 col-lg-6">
          <img
            src={SearchExample.src}
            class="img-fluid rounded shadow-lg"
            alt="Find what matters, instantly, with ThreadScribe.ai"
            width="100%"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="ts-bg-primary-10 py-5">
    <div class="container">
      <div class="d-flex justify-content-center text-center">
        <div class="col-12 col-lg-10">
          <h2>
            Experience the future of <span class="glow">customer support</span>
          </h2>
          <p class="py-3">
            Boost productivity, streamline operations, and delight customers with ThreadScribe. Get
            started today and transform your Slack into a powerful customer support hub.
          </p>
          <a class="btn btn-primary btn-lg" href={config.threadScribe.appHome}>
            <i class="bi bi-stars"></i> Get started
          </a>
          <a class="btn btn-outline-primary btn-lg" href={config.threadScribe.appHome}>
            Schedule a Demo
          </a><br />
          <a class="btn btn-link btn-lg" href={config.threadScribe.appHome}> Contact Us </a>
        </div>
      </div>
    </div>
  </section>

  <!-- <section class="container py-5">
    <hr />
  </section> -->

  <!-- FAQs -->
  <section class="container py-5 ts-faq">
    <div class="row pb-5">
      <div class="col">
        <!-- <div class="eyebrow">Frequently Asked questions</div> -->
        <h2 class="text-center">Frequently Asked Questions</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="accordion" id="accordionPanelsStayOpenExample">
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button
                class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#faq1"
                aria-expanded="false"
                aria-controls="faq1"
              >
                What is ThreadScribe?
              </button>
            </h2>
            <div id="faq1" class="accordion-collapse collapse">
              <div class="accordion-body">
                ThreadScribe.ai is a chatbot for Slack that uses cutting-edge AI to transform your
                Slack conversations into a structured, easily searchable knowledge base.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button
                class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#faq2"
                aria-expanded="false"
                aria-controls="faq2"
              >
                How much does ThreadScribe cost?
              </button>
            </h2>
            <div id="faq2" class="accordion-collapse collapse">
              <div class="accordion-body">
                Threadscribe is available for free for small workspaces and workloads. Subscription
                plans are available for larger organizations who are serious about providing
                exceptional customer service. Pricing is available on our pricing page.
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button
                class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#faq3"
                aria-expanded="false"
                aria-controls="faq3"
              >
                How can I get started with ThreadScribe?
              </button>
            </h2>
            <div id="faq3" class="accordion-collapse collapse">
              <div class="accordion-body">
                To get started with ThreadScribe, simply install the app on your Slack workspace and
                begin summarizing some of your conversations.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p class="my-4">
          Your question not answered here? <a href="mailto:hello@threadscribe.ai">Email us</a>.
        </p>
      </div>
    </div>
  </section>

  <section class="ts-banner">
    <div class="container">
      <div class="row py-5 text-center">
        <div class="col">
          <h1 class="py-5">
            Get started <span class="glow">in minutes</span>
          </h1>
          <CTAButtons isDark="true" />
        </div>
      </div>
    </div>
  </section>
</SiteLayout>
