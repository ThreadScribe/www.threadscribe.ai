    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());

    gtag('config', 'G-XDC5PBCFNJ');
  </script>
</head>

<body>
  <Nav />

  <slot />

  <Footer />

  <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  <script is:inline src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script is:inline src="/js/scripts.js"></script>
</body>

</html>

